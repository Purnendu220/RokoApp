<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:gravity="center"
    tools:context=".activity.PaymentActivity">

    <ImageView
        android:id="@+id/passImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/loading"
        android:src="@drawable/roko"/>

    <TextView
        android:id="@+id/namePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/main_header"/>

    <TextView
        android:id="@+id/passDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_sub_header"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/passesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/costOfPasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passesCount"
            android:textColor="@color/green"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/button_rectangle_pay"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/costOfPasses"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/item_text_size"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/buyButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="40dp"
        android:background="@color/yellow"
        android:textColor="@color/white"
        android:textSize="@dimen/main_header"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="@string/buy_now"/>

</LinearLayout>